<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.riccardo.lomux.ItineraryDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/itinerary_details_layout_inner_left_vertical_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">




            <TextView
                android:id="@+id/itinerary_details_layout_textview_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Info.............................."
                android:maxLines="13"
                android:scrollbars="vertical"
                android:scrollbarStyle="insideOverlay"
                android:fadeScrollbars="true"
                android:fadingEdge="vertical"
                android:layout_marginTop="10dp"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/itinerary_details_layout_inner_right_vertical_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itinerary_details_layout_imageview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:padding="5dp"
                android:src="@drawable/info_pin_placeholder" />







    </LinearLayout>


    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/itinerary_details_layout_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"/>
</LinearLayout>